<Project Sdk="Microsoft.NET.Sdk.Razor">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ApplicationIcon>icon.ico</ApplicationIcon>
    <AssemblyName>RulesEngineEditor</AssemblyName>
    <RootNamespace>RulesEngineEditor</RootNamespace>
    <Authors>Alex Reich</Authors>
    <Description>Editor for Microsoft RulesEngine - Blazor UI library intended for integration in Web or Desktop</Description>
    <Copyright>Copyright (c) Alex Reich.</Copyright>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageProjectUrl>https://github.com/alexreich/RulesEngineEditor</PackageProjectUrl>
    <PackageTags>BRE, Rules Engine, Abstraction, Editor</PackageTags>
    <PackageReleaseNotes>https://github.com/alexreich/RulesEngineEditor/blob/main/CHANGELOG.md</PackageReleaseNotes>
    <PackageIcon>RulesEngineEditor.png</PackageIcon>
    <PackageIconUrl />
    <Version>1.4.8</Version>
    <AssemblyVersion>1.4.8.0</AssemblyVersion>
    <FileVersion>1.4.8.0</FileVersion>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>
  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="blazor-dragdrop" Version="2.6.1" />
    <PackageReference Include="RulesEngine" Version="5.0.6" />
    <PackageReference Include="ValueInjecter" Version="3.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="8.0.14" />
  </ItemGroup>
  <ItemGroup>
    <None Include="..\..\content\RulesEngineEditor.png">
      <Pack>True</Pack>
      <PackagePath>
      </PackagePath>
    </None>
    <None Include="..\..\LICENSE">
      <Pack>True</Pack>
      <PackagePath>
      </PackagePath>
    </None>
    <None Include="..\..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Update="Resources\SharedResources.resx">
      <ManifestResourceName>RulesEngineEditor.Resources.SharedResources</ManifestResourceName>
    </EmbeddedResource>
    <EmbeddedResource Update="Resources\SharedResources.zh-CN.resx">
      <ManifestResourceName>RulesEngineEditor.Resources.SharedResources.zh-CN</ManifestResourceName>
    </EmbeddedResource>
  </ItemGroup>
</Project>